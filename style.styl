.sidebarleft
  &__menu
    overflow hidden
    &__item
      cursor pointer
      &__expandpicto
        position absolute
        width 25px
        text-align center
        & > i
          margin-right 5px
      &__link
        display inline-block
        padding 3px 0
        width 100%
        white-space nowrap
        margin-left 25px
        color inherit
        &:hover
          text-decoration none
        & > i
          margin-right 8px
          font-size 15px
        & > .fa-bank
          color #ddd
        & > .fa-folder-open-o
          color #cc0
        & > .fa-file-text-o
          color #0c0
        & > .fa-comments-o
          color #328bca
        & > .fa-paperclip
          color orange
  a, a:hover, a:focus
    text-decoration none
    color inherit
